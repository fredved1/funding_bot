# Environment Variables for Delta Neutral Funding Bot
# Copy this file to .env and fill in your credentials

# Hyperliquid API Credentials
# SECURITY: Use a dedicated SUB-ACCOUNT, never your main wallet!
HL_PRIVATE_KEY=0x_your_private_key_here
HL_ACCOUNT_ADDRESS=0x_your_wallet_address_here

# Discord Notifications (optional)
# Create a webhook: Discord Server Settings -> Integrations -> Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Optional overrides
LOG_LEVEL=INFO
